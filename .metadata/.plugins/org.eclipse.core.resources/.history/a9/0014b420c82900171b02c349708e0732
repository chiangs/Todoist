<div id="form>">
<form>
	<input type="text" placeholder="id" ng-model="todo.id"/><br>
	<input type="text" placeholder="task" ng-model="todo.task"/><br>
	<input type="text" placeholder="description" ng-model="todo.description"/><br>
	<input type="text" placeholder="completed" ng-model="todo.completed"/><br>
	<input type="submit" value="Add ToDo" ng-click="vm.addToList(todo)"/>
</form>

</div>