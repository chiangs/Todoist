angular.module('todo')
.factory('todoService', function(){
	var service = {};
	
	var todos = [
	      {
		        id : 1,
		        task : 'Go round mums',
		        description : '',
		        completed : false
		      },
		      {
		        id : 2,
		        task : 'Get Liz back',
		        description : '',
		        completed : false
		      },
		      {
		        id : 3,
		        task : 'Sort life out',
		        description : '',
		        completed :  false
		      }
		    ];
	
	service.index = function(){
		return todos;
	};
	
	service.create = function(todo){
		todos.push(todo);
	};
	
	return service;
})