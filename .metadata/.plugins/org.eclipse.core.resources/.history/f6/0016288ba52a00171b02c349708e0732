	<tr scope="row">
		<th>ID</th>
		<th>Task</th>
		<th>Description</th>
		<th>Mark</th>
		<th>Status</th>
		<th>Delete</th>
	</tr>
	<tr ng-repeat = "td in vm.todos">
		<td>{{td.id}}</td>
		<td ng-click="vm.displayTodo(td)">{{td.task}}</td>
		<td ng-click="vm.displayTodo(td)">{{td.description}}</td>
		<td><input type="checkbox" name="mark" ng-model="td.completed"></td>
		<td>{{td.completed}}</td>
