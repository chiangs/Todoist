angular.module('todo')
	.component('todoShow', {
	templateUrl: 'app/todo/todoShow/todoShow.component.html',
	controller : function() {
		var vm = this;
		
		vm.editMode = false;
		vm.editTodo = null;
		vm.setEditTodo = function(todo) {
			vm.editTodo = angular.copy(todo);
		}
	},
	controllerAs : 'vm',
	bindings : {
		todo : '<',
		goBack : '&'
	}
})
