angular.module('pokedex').component('pokeTable', {
	templateUrl : 'app/pokedex/poketable/pokeTable.component.html',
	controller : function(pokemonService) {
		var vm = this;

		vm.pokemons = pokemonService.index();

		vm.showTable = true;
		vm.selected = null;

		vm.showPokemon = function(poke) {
			vm.selected = poke;
			vm.showTable = false;
		}

	}
})